{
  "extends": [
    "@egy186/eslint-config",
    "@egy186/eslint-config/commonjs"
  ],
  "ignorePatterns": [
    "coverage"
  ],
  "overrides": [
    {
      "files": [
        "test-fixtures/*"
      ],
      "rules": {
        "n/no-sync": "off"
      }
    },
    {
      "files": [
        "*.test.js"
      ],
      "env": {
        "jest": true
      }
    }
  ]
}
